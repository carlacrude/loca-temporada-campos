<h1>Formulário de proposta</h1>

<%= form_for(@proposal, html: { multipart: true } )  do |f| %>
    <div class="form-group">
        <%= f.label :guest_name, 'Nome do locatário' %>
        <%= f.text_field :guest_name, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :email, 'Email do locatário' %>
        <%= f.text_field :email, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :phone, 'Telefone do locatário' %>
        <%= f.text_field :phone, class: 'form-control' %>
    </div>
    
    <div class="form-group">
        <%= f.label :rent_purpose, 'Motivo da locação' %>
        <%= f.text_field :rent_purpose, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :start_date, 'Data: início locação' %>
        <%= f.text_field :start_date, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :end_date, 'Data: término da locação' %>
        <%= f.text_field :end_date, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :total_guests, 'Quantidade de hóspedes' %>
        <%= f.text_field :total_guests, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :pet, 'Permite animais?' %>
        <%= f.text_field :pet, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :smoker, 'Permite fumantes?' %>
        <%= f.text_field :smoker, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :details, 'Detalhes' %>
        <%= f.text_field :details, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :total_amount, 'Valor total' %>
        <%= f.text_field :total_amount, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.submit 'Enviar proposta', class: 'btn btn-primary' %>
    <% end %>
